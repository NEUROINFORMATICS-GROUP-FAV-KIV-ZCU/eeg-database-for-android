<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_width="match_parent">

    <TextView
            style="@style/section_title"
            android:text="@string/experiment_add_group"
            android:drawableLeft="@drawable/ic_action_group"
            />


    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_gravity="fill_horizontal"
            android:id="@+id/experiment_add_group"/>


    <TextView
            style="@style/section_title"
            android:text="@string/experiment_add_scenario"
            android:drawableLeft="@drawable/ic_action_scenario"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            >

        <Spinner
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:spinnerMode="dialog"
                android:id="@+id/experiment_add_scenario"/>

        <ImageButton
                android:id="@+id/experiment_add_scenario_new"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_add"
                android:contentDescription="@string/experiment_add_scenario"/>
    </LinearLayout>

    <TextView
            style="@style/section_title"
            android:text="@string/experiment_add_subject"
            android:drawableLeft="@drawable/ic_action_person"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            >

        <Spinner
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:spinnerMode="dialog"
                android:id="@+id/experiment_add_subject"/>

        <ImageButton
                android:id="@+id/experiment_add_subject_new"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_add"
                android:contentDescription="@string/experiment_add_subject"/>
    </LinearLayout>

    <TextView
            style="@style/section_title"
            android:text="@string/experiment_add_artifact"
            android:drawableLeft="@drawable/ic_action_artifact"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            >

        <Spinner
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:spinnerMode="dialog"
                android:id="@+id/experiment_add_artifact"/>

        <ImageButton
                android:id="@+id/experiment_add_artifact_new"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_add"
                android:contentDescription="@string/experiment_add_artifact"/>
    </LinearLayout>

    <TextView
            style="@style/section_title"
            android:text="@string/experiment_add_digitization"
            android:drawableLeft="@drawable/ic_action_digitization"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            >

        <Spinner
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:spinnerMode="dialog"
                android:id="@+id/experiment_add_digitization"/>

        <ImageButton
                android:id="@+id/experiment_add_digitization_new"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_action_add"
                android:contentDescription="@string/experiment_add_digitization"/>
    </LinearLayout>

</LinearLayout>